<!DOCTYPE html>
<html>
<head>
  <title>Foosball Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Arvo:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/"><h1>Foosball Tracker</h1>
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Users", users_path, class: "" %></li>
            <li><%= link_to "Teams", teams_path, class: "" %> </li>
            <li><%= link_to "Matches", matches_path, class: "" %></li>
            <li><%= link_to "Team Rankings", ranking_path, class: "" %></li>

        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


<% if flash && flash[:alerts] %>
  <div class="container">
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <% flash[:alerts].each do |error| %>
        <%= error %>
      </div>
    <%end%>
  </div>
<%end%>

<% if flash && flash[:notices] %>
  <div class="container">
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <% flash[:notices].each do |error| %>
        <%= error %>
      </div>
    <%end%>
  </div>
<%end%>


	<%= yield %>
	<section class="space-20"> </div>

</body>
</html>
